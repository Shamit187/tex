  \begin{minipage}[t]{0.32\textwidth}
      \raggedright
      \small
      \begin{spacing}{0.8}
        \textbf{Topic:} \topic \\
        \lavrule \\ [0.5em]
        \textbf{Written on:} \writtendate\\
        \lavrule \\ [0.5em]
        \textbf{Keywords:} \keywords\\
        \lavrule \\
      \end{spacing}
  \end{minipage}
  \hfill
  \begin{minipage}[t]{0.65\textwidth}
      \raggedright
      {\small
      \textbf{Shamit Fatin},\ 
