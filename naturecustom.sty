% --- Font ---
\ifdefined\fontpath
\setmainfont[
    Path = \fontpath,
    UprightFont = *-Regular.ttf,
    ItalicFont = *-Italic.ttf,
    BoldFont = *-Bold.ttf,
    BoldItalicFont = *-BoldItalic.ttf,
]{Harding}
\else
\setmainfont[
    Path = ../nature-font/,
    UprightFont = *-Regular.ttf,
    ItalicFont = *-Italic.ttf,
